@model List<Product>

@{
    var categories = ViewData["Categories"] as List<Category>;
}

<div class="row" style="margin-top: 10px;">
    <div class="col-md-3">
        <form asp-controller="User" asp-action="Index" method="get">
            <div class="form-group">
                <label for="categoryFilter">Filter by Category:</label>
                <select class="form-control" id="categoryFilter" name="category">
                    <option value="">All Categories</option>
                    @foreach (var category in categories!)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary" style="margin-top: 10px">Apply Filter</button>
        </form>
    </div>
    <div class="col-md-9">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach (var item in Model)
            {
                <div class="card col mb-4 ml-2" style="width: 18rem; margin-left: 4px;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Price: @item.Price</h6>
                        <p class="card-text">@item.Description</p>
                        <a asp-controller="User" asp-action="AddOrder" asp-route-id="@item.Id" asp-route-userId="" class="btn btn-primary">Add To Order</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
